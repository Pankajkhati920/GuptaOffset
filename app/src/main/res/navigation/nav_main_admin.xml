<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main_admin"
    app:startDestination="@id/adminHomeFragment">

    <fragment
        android:id="@+id/adminHomeFragment"
        android:name="com.flaxeninfosoft.guptaoffset.views.admin.fragments.AdminHomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_admin_home" >
        <action
            android:id="@+id/action_adminHomeFragment_to_adminEmployeeActivityFragment"
            app:destination="@id/adminEmployeeActivityFragment" />
        <action
            android:id="@+id/action_adminHomeFragment_to_adminAddSuperEmployeeFragment"
            app:destination="@id/adminAddSuperEmployeeFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminEmployeeActivityFragment"
        android:name="com.flaxeninfosoft.guptaoffset.views.admin.fragments.AdminEmployeeActivityFragment"
        android:label="Employee Activity"
        tools:layout="@layout/fragment_admin_employee_activity" />
    <fragment
        android:id="@+id/adminAddSuperEmployeeFragment"
        tools:layout="@layout/fragment_admin_add_super_employee"
        android:name="com.flaxeninfosoft.guptaoffset.views.admin.fragments.AdminAddSuperEmployeeFragment"
        android:label="AdminAddSuperEmployeeFragment" />
</navigation>