<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="@dimen/card_corner"
        android:elevation="@dimen/card_elevation"
        android:backgroundTint="#27E1C5E6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/single_expense_list_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:shape="oval"
            android:src="@drawable/user_logo1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/single_expense_list_start_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="sans"
            android:textAllCaps="false"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@id/single_expense_list_image"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/single_expense_list_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="sans"
            android:textAllCaps="false"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@id/single_expense_list_start_data"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/single_expense_list_end_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="sans"
            android:textAllCaps="false"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@id/single_expense_list_sign"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/single_expense_list_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="sans"
            android:textAllCaps="false"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@id/single_expense_list_image"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/single_expense_list_start_data"
            />

        <ImageView
            android:id="@+id/single_expense_list_delete_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:shape="oval"
            android:src="@drawable/delete"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>