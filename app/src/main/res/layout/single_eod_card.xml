<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="eod"
            type="com.flaxeninfosoft.guptaoffset.models.Eod" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:backgroundTint="#429890"
        android:elevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/single_eod_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="20dp"
                        android:text="Name: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/single_eod_card_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginLeft="20dp"
                        android:text="Date: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/single_eod_card_name" />
                    <TextView
                        android:id="@+id/single_eod_card_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginLeft="20dp"
                        android:text="Status: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/single_eod_card_date" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/single_eod_card_barrier1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="end"
                        app:constraint_referenced_ids="single_eod_card_name,single_eod_card_date,single_eod_card_status" />

                    <TextView
                        android:id="@+id/single_eod_card_name_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text=""
                        android:textSize="16sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/single_eod_card_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/single_eod_card_barrier1" />

                    <TextView
                        android:id="@+id/single_eod_card_date_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text=""
                        android:textSize="16sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/single_eod_card_date"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/single_eod_card_barrier1" />

                    <TextView
                        android:id="@+id/single_eod_card_status_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text=""
                        android:textSize="16sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/single_eod_card_status"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/single_eod_card_barrier1" />

                </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/single_eod_card_in_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="IN: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintRight_toLeftOf="@id/single_eod_card_in_time_empty"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/single_eod_card_out_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="OUT: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintRight_toLeftOf="@id/single_eod_card_out_time_empty"
                        app:layout_constraintTop_toBottomOf="@id/single_eod_card_in_time" />


                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/single_eod_card_barrier2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="end"
                        app:constraint_referenced_ids="single_eod_card_in_time,single_eod_card_out_time" />

                    <TextView
                        android:id="@+id/single_eod_card_in_time_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/single_eod_card_in_time"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/single_eod_card_barrier2" />

                    <TextView
                        android:id="@+id/single_eod_card_out_time_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/single_eod_card_out_time"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/single_eod_card_barrier2" />
                </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>