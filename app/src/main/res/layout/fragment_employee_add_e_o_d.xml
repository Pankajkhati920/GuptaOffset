<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="eod"
            type="com.flaxeninfosoft.guptaoffset.models.Eod" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color_cream"
        tools:context=".views.employee.fragments.EmployeeAddEODFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="#f9f9f9">

            <LinearLayout
                android:background="@drawable/layoutcorner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/calender_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableTint="@color/red"
                        android:padding="5dp"
                        android:text="Date :"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date_text_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="06 - Apr - 2024"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />

                </LinearLayout>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/textcolor" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/time_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableTint="@color/red"
                        android:padding="5dp"
                        android:text="Time :"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tm_text_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12:03"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/layoutcorner2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/city_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableTint="@color/red"
                        android:padding="5dp"
                        android:text="City :"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cityname_text_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select City"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />


                </LinearLayout>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/textcolor" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tehsil_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/red"
                        android:padding="3dp"
                        android:text="Tehsil :"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tehsilname_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Tehsil"
                        android:textColor="@color/red"
                        android:drawableRight="@drawable/baseline_location_on_24"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textcolor" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/employee_add_eod_address"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address "
                    android:text="" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/school_longitude_background"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Longitude and Latitude"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor"
                    android:gravity="center"
                    android:drawableEnd="@drawable/baseline_location_on_24"/>

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#f9f9f9"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutcorner2"
                    android:layout_marginEnd="3sp"
                    android:layout_marginStart="3sp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Attendence \ntime"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textcolor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:src="@drawable/greencheck"
                            android:layout_marginStart="5sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="3sp"
                            android:layout_marginEnd="5sp"
                            android:background="@color/textcolor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:src="@drawable/redcheck"
                            android:layout_marginStart="5sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textcolor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="00:00"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5sp"
                            android:layout_marginEnd="3sp"
                            android:background="@color/textcolor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/black" />


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layoutcorner2"
                    android:layout_marginEnd="3sp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableEnd="@drawable/km_icon"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/textcolor"
                        android:paddingTop="5dp"
                        android:paddingEnd="3dp"
                        android:paddingBottom="5dp"
                        android:text="K.M."
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textcolor" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@{eod.petrolExpense != null ? eod.petrolExpense : `0`}"
                            android:textColor="@color/textcolor"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_school"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layoutcorner2"
                    android:layout_marginEnd="3sp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="School"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:drawableEnd="@drawable/baseline_school_24"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/textcolor"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textcolor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@{eod.schoolVisits != null ? eod.schoolVisits : `0`}"
                            android:textColor="@color/textcolor"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="2sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/linear_layout_dealer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layoutcorner2"
                    android:layout_marginEnd="3sp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Dealer"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textcolor" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="DL NM"
                            android:textColor="@color/textcolor"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/employee_add_eod_tehsil"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tehsil Name"
                    android:text="" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/employee_add_eod_schools_visits"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Number of schools visits"
                    android:inputType="numberSigned"
                    android:text="@={eod.schoolVisits}" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:background="@drawable/employee_corner_layout">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/employee_add_eod_petrol_expense"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Petrol expense"
                    android:inputType="numberSigned"
                    android:text="@={eod.petrolExpense}" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:text="petrol expense snap"/>

            <ImageView
                android:id="@+id/employee_add_eod_petrol_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/ic_add_image"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:background="@drawable/employee_corner_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Expenses"
                    android:layout_weight="7"
                    android:paddingStart="3dp"
                    android:textColor="@color/textcolor"
                    android:textStyle="normal"
                    android:layout_marginStart="6dp"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Expenses Description"
                    android:layout_weight="9"
                    android:textColor="@color/textcolor"
                    android:textStyle="normal"
                    android:layout_marginStart="6dp"
                    android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/employee_Add_Eod_Other_Expense"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:layout_margin="3dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Other Expenses"
                            android:text="@={eod.otherExpense}" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_margin="3dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Expenses Description"
                            android:inputType="numberSigned"
                            android:text="@={eod.schoolVisits}" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:text="other expense snap"/>

            <ImageView
                android:id="@+id/employee_add_eod_expense_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/ic_add_image"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/employee_corner_layout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daily Allowance"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="@color/textcolor"
                    android:layout_gravity="center"
                    android:gravity="center"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:padding="5dp"
                        android:layout_weight="7"
                        android:text="Local :"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:padding="5dp"
                        android:layout_weight="7"
                        android:text="Out Of City :"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="7"
                        android:text="Night Stay :"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Other :"
                        android:layout_weight="7"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/employee_add_eod_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:backgroundTint="#FD7F44"
                android:text="Add Report" />
        </LinearLayout>

    </ScrollView>
</layout>