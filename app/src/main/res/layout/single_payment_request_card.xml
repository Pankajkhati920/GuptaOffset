<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="paymentRequest"
            type="com.flaxeninfosoft.guptaoffset.models.PaymentRequest" />

    </data>

    <RelativeLayout
        android:id="@+id/layout_payment_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whatsapp_b"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/message_send_for_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/test_arrow"
            android:background="@drawable/bg_msg_right"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp"
            tools:ignore="UselessParent">


            <LinearLayout
                android:id="@+id/payment_card"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:maxWidth="200dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/payment"
                    android:text="Payment "
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/single_payment_request_card_payment"
                    android:layout_marginTop="5dp"
                    android:text="@{paymentRequest.amount}"
                    android:textColor="#222"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextClock
                android:id="@+id/msg_time_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/payment_card"
                android:layout_toEndOf="@+id/payment_card"
                android:text="1:30 P.M."
                android:textColor="#888"
                android:layout_toRightOf="@+id/payment_card" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/test_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="-6dp"
            android:layout_marginTop="0.6dp"
            android:background="@null"
            android:scaleX="1.5"
            android:src="@drawable/v_bubble_corner_right" />
    </RelativeLayout>
</layout>